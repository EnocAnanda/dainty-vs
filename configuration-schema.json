{
  "$id": "https://dainty-vs.now.sh/configuration-schema.json",
  "type": "object",
  "title": "Dainty customization",
  "additionalProperties": false,
  "properties": {
    "variant": {
      "$id": "#/properties/variant",
      "type": "string",
      "enum": ["dark", "light"],
      "title": "Color theme variant",
      "default": "dark",
      "additionalProperties": false
    },
    "editor": {
      "$id": "#/properties/editor",
      "type": "object",
      "title": "Visual Studio editor",
      "default": {},
      "additionalProperties": false,
      "properties": {
        "fontFamily": {
          "$id": "#/properties/editor/properties/fontFamily",
          "type": "string",
          "title": "Editor, console, and output windows font",
          "default": "Consolas"
        },
        "backgroundLightness": {
          "$id": "#/properties/editor/properties/backgroundLightness",
          "type": "number",
          "title": "Editor background lightness adjustment",
          "default": 0
        },
        "foregroundLightness": {
          "$id": "#/properties/editor/properties/foregroundLightness",
          "type": "number",
          "title": "Editor foreground lightness adjustment",
          "default": 0
        }
      }
    },
    "environment": {
      "$id": "#/properties/environment",
      "type": "object",
      "title": "Visual Studio environment",
      "default": {},
      "additionalProperties": false,
      "properties": {
        "backgroundLightness": {
          "$id": "#/properties/environment/properties/backgroundLightness",
          "type": "number",
          "title": "Environment background lightness adjustment",
          "default": 0
        },
        "foregroundLightness": {
          "$id": "#/properties/environment/properties/foregroundLightness",
          "type": "number",
          "title": "Environment foreground lightness adjustment",
          "default": 0
        },
        "additionalCommentsContrast": {
          "$id": "#/properties/environment/properties/additionalCommentsContrast",
          "type": "boolean",
          "title": "Additional contrast for comments",
          "default": false
        },
        "additionalScrollbarsContrast": {
          "$id": "#/properties/environment/properties/additionalScrollbarsContrast",
          "type": "boolean",
          "title": "Additional contrast for scrollbars",
          "default": true
        },
        "transparentBorders": {
          "$id": "#/properties/environment/properties/transparentBorders",
          "type": "boolean",
          "title": "Transparent environment borders",
          "default": false
        },
        "transparentScrollbarContainers": {
          "$id": "#/properties/environment/properties/transparentScrollbarContainers",
          "type": "boolean",
          "title": "Transparent scrollbar containers",
          "default": false
        },
        "transparentToolWindowGrips": {
          "$id": "#/properties/environment/properties/transparentToolWindowGrips",
          "type": "boolean",
          "title": "Transparent tool window grip handles",
          "default": true
        }
      }
    },
    "extensions": {
      "$id": "#/properties/extensions",
      "type": "object",
      "title": "Visual Studio extensions",
      "default": {},
      "additionalProperties": false,
      "properties": {
        "indentGuides": {
          "$id": "#/properties/extensions/properties/indentGuides",
          "type": "object",
          "title": "Indent Guides extension",
          "default": {},
          "additionalProperties": false,
          "properties": {
            "includeSettings": {
              "$id": "#/properties/extensions/properties/indentGuides/properties/includeSettings",
              "type": "boolean",
              "title": "Include settings for Indent Guides extension",
              "default": false
            }
          }
        }
      }
    },
    "colors": {
      "$id": "#/properties/colors",
      "type": "object",
      "title": "Dainty colors",
      "default": {},
      "additionalProperties": false,
      "properties": {
        "adjustments": {
          "$id": "#/properties/colors/properties/adjustments",
          "type": "object",
          "title": "Color adjustments",
          "default": {},
          "additionalProperties": false,
          "properties": {
            "lightness": {
              "$id": "#/properties/colors/properties/adjustments/properties/lightness",
              "type": "number",
              "title": "Blue-gray scale lightness adjustment",
              "default": 0
            },
            "chroma": {
              "$id": "#/properties/colors/properties/adjustments/properties/chroma",
              "type": "number",
              "title": "Colors chroma adjustment",
              "default": 0
            },
            "chromaStart": {
              "$id": "#/properties/colors/properties/adjustments/properties/chromaStart",
              "type": "number",
              "title": "Start of blue gray scale chroma adjustment"
            },
            "chromaEnd": {
              "$id": "#/properties/colors/properties/adjustments/properties/chromaEnd",
              "type": "number",
              "title": "End of blue gray scale chroma adjustment"
            }
          }
        },
        "overrides": {
          "$id": "#/properties/colors/properties/overrides",
          "type": "object",
          "title": "Dainty color overrides",
          "default": {},
          "additionalProperties": false,
          "properties": {
            "blueGray": {
              "$id": "#/properties/colors/properties/overrides/properties/blueGray",
              "type": "string",
              "title": "Base color for blue-gray scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "blue": {
              "$id": "#/properties/colors/properties/overrides/properties/blue",
              "type": "string",
              "title": "Base color for blue scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "blueLessChroma": {
              "$id": "#/properties/colors/properties/overrides/properties/blueLessChroma",
              "type": "string",
              "title": "Base color for blue with less chroma scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "blueMoreChroma": {
              "$id": "#/properties/colors/properties/overrides/properties/blueMoreChroma",
              "type": "string",
              "title": "Base color for blue with more chroma scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "purple": {
              "$id": "#/properties/colors/properties/overrides/properties/purple",
              "type": "string",
              "title": "Base color for purple scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "green": {
              "$id": "#/properties/colors/properties/overrides/properties/green",
              "type": "string",
              "title": "Base color for green scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "orange": {
              "$id": "#/properties/colors/properties/overrides/properties/orange",
              "type": "string",
              "title": "Base color for orange scale",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          }
        }
      }
    },
    "customizations": {
      "$id": "#/properties/customizations",
      "type": "object",
      "title": "Dainty customizations",
      "default": {},
      "additionalProperties": false,
      "properties": {
        "__searchReplace": {
          "$id": "#/properties/customizations/properties/__searchReplace",
          "type": "object",
          "title": "Searchâ€“replace customizations",
          "default": {}
        },
        "__categories": {
          "type": "object",
          "$id": "#/properties/customizations/properties/__categories",
          "title": "Category customizations",
          "default": {}
        }
      }
    }
  }
}
