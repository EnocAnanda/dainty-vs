{
  "$id": "https://dainty-vs.now.sh/configuration-schema.json",
  "type": "object",
  "title": "Dainty customization",
  "required": ["editor", "environment", "extensions"],
  "additionalProperties": false,
  "properties": {
    "editor": {
      "$id": "#/properties/editor",
      "type": "object",
      "title": "Visual Studio editor",
      "default": {},
      "required": ["fontFamily"],
      "additionalProperties": false,
      "properties": {
        "fontFamily": {
          "$id": "#/properties/editor/properties/fontFamily",
          "type": "string",
          "title": "Editor, console, and output windows font",
          "default": "Consolas"
        }
      }
    },
    "environment": {
      "$id": "#/properties/environment",
      "type": "object",
      "title": "Visual Studio environment",
      "default": {},
      "required": [
        "accentColor",
        "additionalBackgroundContrast",
        "additionalTextContrast",
        "monochromaticText",
        "transparentBorders",
        "transparentScrollbarContainers",
        "transparentToolWindowGrips"
      ],
      "additionalProperties": false,
      "properties": {
        "accentColor": {
          "$id": "#/properties/environment/properties/accentColor",
          "type": "string",
          "enum": ["gray", "blue", "transparent"],
          "title": "Active file tab, file tab border, and status bar background",
          "default": "gray"
        },
        "additionalBackgroundContrast": {
          "$id": "#/properties/environment/properties/additionalBackgroundContrast",
          "type": "boolean",
          "title": "Additional contrast for environment background",
          "default": false
        },
        "additionalTextContrast": {
          "$id": "#/properties/environment/properties/additionalTextContrast",
          "type": "boolean",
          "title": "Additional contrast for environment text",
          "default": true
        },
        "additionalCommentsContrast": {
          "$id": "#/properties/environment/properties/additionalCommentsContrast",
          "type": "boolean",
          "title": "Additional contrast for comments",
          "default": false
        },
        "additionalScrollbarsContrast": {
          "$id": "#/properties/environment/properties/additionalScrollbarsContrast",
          "type": "boolean",
          "title": "Additional contrast for scrollbars",
          "default": true
        },
        "monochromaticText": {
          "$id": "#/properties/environment/properties/monochromaticText",
          "type": "boolean",
          "title": "Monochromatic (instead of grayscale) environment text",
          "default": true
        },
        "transparentBorders": {
          "$id": "#/properties/environment/properties/transparentBorders",
          "type": "boolean",
          "title": "Transparent environment borders",
          "default": false
        },
        "transparentScrollbarContainers": {
          "$id": "#/properties/environment/properties/transparentScrollbarContainers",
          "type": "boolean",
          "title": "Transparent scrollbar containers",
          "default": false
        },
        "transparentToolWindowGrips": {
          "$id": "#/properties/environment/properties/transparentToolWindowGrips",
          "type": "boolean",
          "title": "Transparent tool window grip handles",
          "default": true
        }
      }
    },
    "extensions": {
      "$id": "#/properties/extensions",
      "type": "object",
      "title": "Visual Studio extensions",
      "default": {},
      "required": ["indentGuides"],
      "additionalProperties": false,
      "properties": {
        "indentGuides": {
          "$id": "#/properties/extensions/properties/indentGuides",
          "type": "object",
          "title": "Indent Guides extension",
          "default": {},
          "required": ["includeSettings"],
          "additionalProperties": false,
          "properties": {
            "includeSettings": {
              "$id": "#/properties/extensions/properties/indentGuides/properties/includeSettings",
              "type": "boolean",
              "title": "Include settings for Indent Guides extension",
              "default": false
            }
          }
        }
      }
    },
    "colors": {
      "$id": "#/properties/colors",
      "type": "object",
      "title": "Dainty colors",
      "default": {},
      "required": ["process"],
      "properties": {
        "process": {
          "$id": "#/properties/colors/properties/process",
          "type": "object",
          "title": "Colors processing",
          "default": {},
          "required": ["brighten", "desaturate"],
          "properties": {
            "brighten": {
              "$id": "#/properties/colors/properties/process/properties/brighten",
              "type": "integer",
              "title": "Brighten colors",
              "default": 0,
              "minimum": 0,
              "maximum": 7
            },
            "desaturate": {
              "$id": "#/properties/colors/properties/process/properties/desaturate",
              "type": "integer",
              "title": "Desaturate colors",
              "default": 0,
              "minimum": 0,
              "maximum": 7
            }
          }
        }
      },
      "overrides": {
        "$id": "#/properties/colors/properties/overrides",
        "type": "object",
        "title": "Dainty colors overrides",
        "required": [
          "grays",
          "blueGrays",
          "blues",
          "blueLighter",
          "greenLighter",
          "deepOrangeLighter",
          "purpleLight",
          "amberLighter"
        ],
        "properties": {
          "grays": {
            "$id": "#/properties/colors/properties/overrides/properties/grays",
            "type": "array",
            "title": "Grays",
            "items": {
              "$id": "#/properties/colors/properties/overrides/properties/grays/items",
              "type": "string",
              "title": "Scale of grays",
              "examples": ["#212121", "#fafafa"],
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "blueGrays": {
            "$id": "#/properties/colors/properties/overrides/properties/blueGrays",
            "type": "array",
            "title": "Blue-grays",
            "items": {
              "$id": "#/properties/colors/properties/overrides/properties/blueGrays/items",
              "type": "string",
              "title": "Scale of blue-grays",
              "examples": ["#0f111a", "#e3f2fd"],
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "blues": {
            "$id": "#/properties/colors/properties/overrides/properties/blues",
            "type": "array",
            "title": "Blues",
            "items": {
              "$id": "#/properties/colors/properties/overrides/properties/blues/items",
              "type": "string",
              "title": "Scale of blues",
              "examples": ["#082847", "#1976d2", "#e3f2fd"],
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "blueLighter": {
            "$id": "#/properties/colors/properties/overrides/properties/blueLighter",
            "type": "string",
            "title": "Lighter blue",
            "examples": ["#82b1ff"],
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "greenLighter": {
            "$id": "#/properties/colors/properties/overrides/properties/greenLighter",
            "type": "string",
            "title": "Lighter green",
            "examples": ["#b9f6ca"],
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "deepOrangeLighter": {
            "$id": "#/properties/colors/properties/overrides/properties/deepOrangeLighter",
            "type": "string",
            "title": "Lighter deep orange",
            "examples": ["#f5cfc4"],
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "purpleLight": {
            "$id": "#/properties/colors/properties/overrides/properties/purpleLight",
            "type": "string",
            "title": "Light purple",
            "examples": ["#ce93d8"],
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "amberLighter": {
            "$id": "#/properties/colors/properties/overrides/properties/amberLighter",
            "type": "string",
            "title": "Lighter amber",
            "examples": ["#ffecb3"],
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          }
        }
      }
    }
  }
}
